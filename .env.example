# Example environment variables for Vercel deployment
# Copy this file and set appropriate values for your environment

# Database connection (required)
DATABASE_URL=postgres://username:password@hostname/database

# Node environment
NODE_ENV=production

# Storage provider options: 'cloudinary', 'supabase', 's3', or 'none'
STORAGE_PROVIDER=cloudinary

# Base URL for stored files (if applicable)
STORAGE_BASE_URL=

# Cloudinary configuration (if using Cloudinary)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Supabase configuration (if using Supabase)
SUPABASE_URL=
SUPABASE_ANON_KEY=

# AWS S3 configuration (if using S3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=
S3_BUCKET_NAME=

# Optional: For client-side processing features
ENABLE_CLIENT_PROCESSING=true

# Optional: Maximum upload size in bytes (default: 100MB)
MAX_UPLOAD_SIZE=104857600